.movie-more-wrap{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 40rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap
}
.movie-more-item{
  width: 200rpx;
  height: 250rpx;
  margin-bottom: 30rpx;
}
.movie-more-item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}
.movie-more-item-title{
  width: 200rpx;
  margin: 0 auto;
  color: #000;
  font-size: 24rpx;
  white-space:norwrap;
  text-overflow: ellipsis;
  overflow: hidden;
}