.search-wrap{
  width: 100%;
  height: 100%;
}
.search-bar{
  width: 100%;
  height: 100rpx;
  background-color:#1AB16C;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search-input{
  width: 654rpx;
  height: 60rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  border-radius: 0rpx 10rpx 10rpx 0rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
}
.search-icon{
  width: 40rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 10rpx 0rpx 0rpx 10rpx;
  display:flex;
  align-items: center;
  justify-content: center;
}